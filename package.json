{
  "name": "graphql-express-nodejs",
  "version": "1.0.0",
  "description": "A Simple GraphQL Server implementation using Express and NodeJS",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:ci": "jest --coverage --ci --forceExit --detectOpenHandles --runInBand",
    "test:watch": "jest --watch",
    "verify": "npm run check && npm run lint",
    "dev": "node ./index.js",
    "check": "tsc --noEmit",
    "lint": "tslint --project tsconfig.json"
  },
  "keywords": [
    "JavaScript",
    "NodeJS",
    "Express",
    "GraphQL",
    "TypeScript"
  ],
  "author": "Kristopher Barry",
  "engines": {
    "node": ">= 6.x"
  },
  "dependencies": {
    "@types/glob": "^7.1.1",
    "@types/graphql": "^14.0.3",
    "@types/node": "*",
    "axios": "0.18.0",
    "class-validator": ">=0.9.1",
    "glob": "^7.1.3",
    "graphql": "^14.0.2",
    "graphql-query-complexity": "^0.2.2",
    "graphql-subscriptions": "^1.0.0",
    "http": "0.0.0",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@types/del": "^3.0.1",
    "@types/express": "^4.16.0",
    "@types/express-graphql": "^0.6.2",
    "@types/ioredis": "^4.0.4",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.18",
    "@types/ws": "^6.0.1",
    "apollo-cache-control": "^0.4.0",
    "apollo-cache-inmemory": "^1.3.12",
    "apollo-client": "^2.4.8",
    "apollo-engine": "^1.1.2",
    "apollo-link": "^1.2.6",
    "apollo-link-ws": "^1.0.12",
    "apollo-server": "^2.3.1",
    "apollo-server-express": "^2.14.2",
    "class-transformer": "^0.2.0",
    "del": "^3.0.0",
    "express": "^4.16.4",
    "express-graphql": "^0.7.1",
    "graphql-playground-middleware-express": "^1.7.8",
    "graphql-redis-subscriptions": "^2.0.0",
    "graphql-tag": "^2.10.0",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "reflect-metadata": "^0.1.12",
    "subscriptions-transport-ws": "^0.9.15",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "type-graphql": "^0.16.0",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.9",
    "typeorm-typedi-extensions": "^0.2.2",
    "typescript": "^3.2.2",
    "ws": "^6.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests,examples}/**/*.{ts,js}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
